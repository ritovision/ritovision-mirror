{
  "name": "ritovision",
  "version": "2.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "next dev --turbopack",
    "prebuild": "tsx scripts/generate-sitemap.ts",
    "build": "next build",
    "start": "serve out -l tcp://0.0.0.0:3000",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:verbose": "vitest run --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "sb": "storybook dev -p 6006",
    "build-sb": "storybook build",
    "serve-sb": "pnpm exec serve storybook-static -l tcp://0.0.0.0:6007",
    "e2e": "playwright test --workers=2",
    "e2e:ui": "playwright test --ui --workers=2",
    "e2e:debug": "PWDEBUG=console playwright test --debug --workers=2",
    "e2e:jsonld": "cross-env JSONLD_REQUIRE_BREADCRUMB=1 JSONLD_REQUIRE_SITE_NAV=1 pnpm playwright test playwright/e2e/jsonld.spec.ts --workers=2",
    "e2e:strict": "cross-env strict_mode_errors=1 pnpm e2e --workers=2",
    "e2e:stable": "playwright test --workers=1",
    "component": "playwright test --config=playwright.component.config.ts --workers=2",
    "component:ui": "playwright test --config=playwright.component.config.ts --ui --workers=2",
    "component:debug": "PWDEBUG=console playwright test --config=playwright.component.config.ts --debug --workers=2",
    "lint": "next lint",
    "check-links": "linkinator ./out --directory-listing --status-code \"403:warn\" --status-code \"429:warn\"",
    "check-links:full": "linkinator ./out --directory-listing --check-fragments --status-code \"403:warn\" --status-code \"429:warn\"",
    "check-links:json": "linkinator ./out --directory-listing --format json --status-code \"403:warn\" --status-code \"429:warn\" > link-check-results.json",
    "check-links:csv": "linkinator ./out --directory-listing --format csv --status-code \"403:warn\" --status-code \"429:warn\" > link-check-results.csv",
    "check-links:verbose": "linkinator ./out --directory-listing --verbosity DEBUG --status-code \"403:warn\" --status-code \"429:warn\"",
    "changeset": "changeset",
    "version:apply": "changeset version",
    "snapshot": "node -e \"const { execSync } = require('child_process'); const tree = execSync('git show -s --format=%T HEAD').toString().trim(); const date = new Date().toISOString().slice(0,10); const sha = execSync(`git commit-tree ${tree} -m \\\"Snapshot ${date}\\\"`).toString().trim(); execSync(`git push --force mirror ${sha}:refs/heads/main`, { stdio: 'inherit' }); console.log('Pushed snapshot', sha);\""
  },
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@pixi/unsafe-eval": "^7.4.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@reduxjs/toolkit": "^2.6.1",
    "@sentry/nextjs": "10",
    "@tsparticles/engine": "^3.8.1",
    "@tsparticles/react": "^3.0.0",
    "formik": "^2.4.6",
    "framer-motion": "^12.4.10",
    "gsap": "^3.12.7",
    "howler": "^2.2.4",
    "import-in-the-middle": "1.15.0",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "modern-normalize": "^3.0.1",
    "next": "15.4.10",
    "pixi.js": "^7.3.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-intersection-observer": "^9.16.0",
    "react-redux": "^9.2.0",
    "require-in-the-middle": "^7.5.2",
    "swiper": "^11.2.5",
    "yup": "^1.6.1",
    "zod": "^4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-docs": "9.1.16",
    "@storybook/nextjs-vite": "9.1.16",
    "@storybook/react": "9.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/gsap": "^1.20.2",
    "@types/howler": "^2.2.12",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.19.24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitest/coverage-v8": "^3.0.9",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.10",
    "eslint-plugin-storybook": "9.1.16",
    "glob": "10",
    "happy-dom": "^20.0.10",
    "linkinator": "^7.5.0",
    "serve": "^14.2.5",
    "storybook": "9.1.16",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  }
}